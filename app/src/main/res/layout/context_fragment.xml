<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.sc.per.time_line.view.NoScrollPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RadioGroup
        android:id="@+id/rg_main"
        android:background="@color/gainsboro"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_btn"
            android:text="主页"
            android:drawableTop="@drawable/rb_home_drawable_selector"
            style="@style/bottom_style_tag"
            />
        <RadioButton
            android:id="@+id/news_btn"
            android:text="主页"
            android:drawableTop="@drawable/rb_home_drawable_selector"
            style="@style/bottom_style_tag"
            />
        <RadioButton
            android:id="@+id/author_btn"
            android:text="主页"
            android:drawableTop="@drawable/rb_home_drawable_selector"
            style="@style/bottom_style_tag"
            />
        <RadioButton
            android:id="@+id/step_btn"
            android:text="设置"
            android:drawableTop="@drawable/rb_home_drawable_selector"
            style="@style/bottom_style_tag"
            />
    </RadioGroup>
</LinearLayout>